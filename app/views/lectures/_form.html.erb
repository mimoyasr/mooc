<%= form_with(model: lecture, local: true) do |form| %>
  <% if lecture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lecture.errors.count, "error") %> prohibited this lecture from being saved:</h2>

      <ul>
      <% lecture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :lecture_title , class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :content %>
    <%= form.text_area :content, id: :lecture_content, class: "ckeditor" %>
  </div>

  <div class="field form-group">
    <%= form.label :file %>
    <%= form.file_field :file, id: :lecture_file , class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :course_id %>
    <%= form.select :course_id, Course.all.collect{|c| [c.title, c.id]}, class: "form-control"%>
  </div>

  <div class="actions form-group">
    <%= form.submit %>
  </div>
<% end %>
